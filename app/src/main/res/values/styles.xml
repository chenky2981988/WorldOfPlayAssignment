<resources>
    <attr name="account_picture" format="reference"/>
    <attr name="close_icon" format="reference"/>
    <attr name="fav_style" format="reference"/>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Red App Theme -->
    <style name="BaseTheme.Theme1" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@android:color/tertiary_text_light</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimaryTheme1</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@color/colorTextTheme1</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="buttonStyle">@style/AppTheme.Button1</item>
        <item name="editTextStyle">@style/AppTheme.EditText1</item>
        <item name="account_picture">@drawable/ic_account_circle_black</item>
        <item name="close_icon">@drawable/ic_close_black</item>
        <item name="fav_style">@drawable/favorite_selector_them1</item>
    </style>

    <!-- Red App Theme -->
    <style name="BaseTheme.Theme2" parent="AppTheme">
        <!-- Attributes for all APIs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="buttonStyle">@style/AppTheme.Button2</item>
        <item name="editTextStyle">@style/AppTheme.EditText2</item>
        <item name="account_picture">@drawable/ic_account_circle_gray</item>
        <item name="close_icon">@drawable/ic_close_gray</item>
        <item name="fav_style">@drawable/favorite_selector_them2</item>
    </style>
    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Button1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorButtonTheme1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonCornerRadius">5dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowRadius">10</item>
    </style>
    <style name="AppTheme.Button2" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonCornerRadius">5dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowRadius">10</item>
    </style>
    <style name="AppTheme.EditText1" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="AppTheme.EditText2" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
